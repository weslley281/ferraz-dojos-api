  "servers": [
    {
      "url": "http://localhost:5000",
      "description": "local"
    },
    {
      "url": "https://git.heroku.com/apibaoba.git",
      "description": "hospedado"
    }
  ],
  "tags": [
    {
      "name": "Dojos",
      "description": "Dojos management"
    }
  ],
  "paths": {
    "/users": {
      "post": {
        "tags": ["Dojos"],
        "summary": "Create a new dojo",
        "description": "To create a new dojo, add this fields in the request body.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "required": [
                  "dojo",
                  "password",
                  "address_line1",
                  "address_line2",
                  "city",
                  "state",
                  "country",
                  "phone",
                  "email"
                ],
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "dojo": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  },
                  "address_line1": {
                    "type": "string"
                  },
                  "address_line2": {
                    "type": "string"
                  },
                  "city": {
                    "type": "string"
                  },
                  "state": {
                    "type": "string"
                  },
                  "country": {
                    "type": "string"
                  },
                  "phone": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  }
                },
                "example": {
                  "dojo": "Dojo super top",
                  "password": "123456",
                  "address_line1": "Rua Fulano de tal, 123",
                  "address_line2": "Quadra 12, Area 12",
                  "city": "Cuiab√°",
                  "state": "Mato Grosso",
                  "country": "Brasil",
                  "phone": "65 99915-7130",
                  "email": "dojotop@gmail.com"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Bad Request"
          }
        }
      }
    }
  }
}
